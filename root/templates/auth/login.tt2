<script> 
[% IF reload || error_notice  %] 
   [% IF error_notice %]
      alert("Login not successful!");
   [% ELSIF prompt_wbid %]
      opener.location.href="[% c.uri_for('/auth/wbid') %]?redirect=[% redirect %]";
   [% ELSIF logout || ! operator %]
      opener.location.reload(1);
   [% ELSE %]
      var answer= confirm("Would you like to continue the process of becoming an operator?") ; 
      if(answer) { opener.location.href ="[% c.uri_for(c.controller('auth').action_for('operator')) %]"; }
      else { opener.location.reload(1);}
  [% END %] 
  window.close();
[% END %]  

hideTextOnFocus(".email");
hideTextOnFocus(".password");
</script>


  
<!-- Login form -->
<div id="login-form">
  <form method="post" align="left" action="[% c.secure_uri_for("/auth/login") %]" style="float:left;">

    <div class="login-holder">
        <span id="fade" class="holder">email</span>
        <input class="email" type="text" name="email" size="22"/>
    </div>
    <div class="login-holder">
        <span id="fade" class="holder">password</span>
        <input class="password" type="password" name="password" size="22"/>
    </div>
    <div class="login-holder" style="margin: -0.2em 0 0.5em; padding:0 1em;">
      <input type="submit" value="Login" id="login"/>
      <div id="fade" style="padding:0 1em;float:right;margin-top:-3px;"><input type="checkbox" id="remember" name="remember" size="10">Remember me</input><br />
                      <a href="[% c.uri_for('/register') %]" onClick='$jq(this).parent().parent().parent().parent().parent().load("[% c.uri_for("/register") %]?inline=1").addClass("registration-form").removeClass("login-form"); return false;' style="padding:0;margin:0;">create an account</a>
      </div>
    </div>
  </form>

  <div class="social">
    <span style="position:absolute;top:30px;">...or sign in with</span>
    <div style="float:right;padding-right:1em;">
      <button class="social_buttons sb_google sb_24" onClick="openid.signin('google');">
          <span>Google</span>
      </button>
      <br style="clear:both" />
      <button class="social_buttons sb_twitter sb_24" onClick="openid.signin('twitter');">
          <span>Twitter</span>
      </button>
      <br style="clear:both" />
      <button class="social_buttons sb_facebook sb_24" onClick="openid.signin('facebook');">
          <span>Facebook</span>
      </button>
<!--
      <br style="clear:both" />
      <button class="social_buttons sb_linkedin sb_24" onClick="openid.signin('linkedin');">
          <span>LinkedIn</span>
      </button>
-->
    </div>
  </div>
</div>
 